{% extends 'TekstoveBundle::main.html.twig' %}
{% block content %}
    разработва се
    {{ form_start(form) }}
    
    {{ form_row(form.title) }}
    {{ form_row(form.text) }}
    {{ form_row(form.text_bg) }}
    
    {{ form_end(form) }}
    
    <script>
        
        
        
        $(function() {
            $('#form_submit').click(function() {
                $.blockUI({
                    centerY: 0,
                    message: '<br/>зареждам...<br/>'
                }); 
                var data = $('#lyric_form').serialize();
                $.ajax({
                    url: "{{ path('lyricAddPostJson') }}",
                    data: data,
                    dataType: 'json',
                    type: 'POST'
                }).success(function(data) {
                    window.location.href = Routing.generate('lyricView', {id:data.lyric.id});
                    return true;
                });
            });
        });
        
    </script>
    
{% endblock %}