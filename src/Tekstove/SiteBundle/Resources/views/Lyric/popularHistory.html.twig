{% extends 'SiteBundle::main.html.twig' %}

{# @TODO add title! #}

{% block content %}

    <h1>
        Най-популярни песни за {{ monthName|trans }} {{year}}
    </h1>

    <table class="table">
        <tr>
            <thead>
                <th>
                    №
                </th>
                <th>
                    Песен
                </th>
                <th>
                    Популярност
                </th>
            </thead>
        </tr>
        {% for lyricHistory in lyricsHistory %}
            <tr>
                <td>
                    {{ loop.index }}
                </td>
                <td>
                    <a href="{{ path('lyricView', { id: lyricHistory.lyric.id }) }}">
                        {{ lyricHistory.lyric.cacheTitleShort }}
                    </a>
                </td>
                <td>
                    {{ lyricHistory.popularity }}
                </td>
            </tr>
        {% endfor %}
    </table>

        {% if prevMonthLink %}
            <a href="{{ prevMonthLink }}">
                Предишен месец
            </a>
        {% endif %}

        {% if nextMonthLink %}
            <a href="{{ nextMonthLink }}">
                Следващ месец
            </a>
        {% endif %}
{% endblock %}
