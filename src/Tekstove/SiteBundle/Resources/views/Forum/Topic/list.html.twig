{% extends 'SiteBundle::main.html.twig' %}
{% block content %}
    <a href="{{ path('tekstove.site.forum.category.list') }}">Форум</a>
    -&gt;
    {{ category.name }}
    <table class="table table-striped table-hover">
        <tr>
            <th>
                Тема
            </th>
            <th>
                Последно мнение
            </th>
        </tr>
{% for topic in topicPagination %}
        <tr>
            <td>
                <a href="{{ path('tekstove.site.forum.topic.view', { id: topic.id }) }}">
                    <b>
                        {{ topic.name }}
                    </b>
                </a>
            </td>
            <td>
                от {{ topic.latestPost.user.username }},
                на {{ topic.latestPost.datetime|date }}
            </td>
        </tr>
{% endfor %}
    </table>

    <div class="navigation">
        {{ knp_pagination_render(topicPagination) }}
    </div>
{% endblock %}
