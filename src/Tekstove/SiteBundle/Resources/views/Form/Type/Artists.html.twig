{% block artists_widget %}
    {% spaceless %}
        {{ block('collection_widget') }}
        
        <button class="btn btn-success" id="addArtist" class="add_tag_link">{{ 'Add artist'|trans }}</button>
        <script>
            function artistSelect2(element) {
                var $deleteElement = jQuery('<button class="btn btn-danger">{{ 'delete'|trans }}</button>');
                $deleteElement.click(function() {
                    jQuery(this).parents('.form-group:first').remove();
                });
                $deleteElement.insertAfter(jQuery(element));
                
                jQuery(element).select2({
                    ajax: {
                        url: '/proxy/api/artists?groups%5B0%5D=Acl&groups%5B1%5D=List',
                        dataType: "json",
                        processResults: function(data) {
                            var returnData = {
                                results: [],
                                pagination: {
                                    more: true
                                }
                            };

                            var i = 0;
                            for (i = 0; i < data.items.length; i++) {
                                returnData.results.push({
                                    id: data.items[i].id,
                                    text: data.items[i].name
                                });
                            }

                            return returnData;
                        },
                        data: function (params) {
                            var filters = [];
                            if (params.term) {
                                filters = [
                                    {
                                        value: params.term,
                                        operator: 'like',
                                        field: 'name'
                                    }
                                ];
                            }

                            return {
                                filters: filters,
                                page: params.page,
                                perPage: 10
                            };
                        }
                    },
                    escapeMarkup: function(e) { return _.escape(e); }
                });
            };
            
            jQuery(document).ready(function () {
                
                jQuery('select[name^="lyric\["]').each(function(key, el) { artistSelect2(el); });
                
                var $addTagLink = $('#addArtist');
                var $collectionHolder;
                
                // Get the ul that holds the collection of artsts
                $collectionHolder = $('#lyric_artists');

                // count the current form inputs we have (e.g. 2), use that as the new
                // index when inserting a new item (e.g. 2)
                $collectionHolder.data('index', $collectionHolder.find(':input').length);

                $addTagLink.on('click', function (e) {
                    // prevent the link from creating a "#" on the URL
                    e.preventDefault();

                    // add a new tag form (see next code block)
                    addTagForm($collectionHolder);
                });
            });

            function addTagForm($collectionHolder) {
                // Get the data-prototype explained earlier
                var prototype = $collectionHolder.attr('data-prototype');

                // get the new index
                var index = $collectionHolder.data('index');

                // Replace '__name__' in the prototype's HTML to
                // instead be a number based on how many items we have
                var newForm = prototype.replace(/__name__/g, index);
                var $newForm = jQuery(newForm);

                // increase the index with one for the next item
                $collectionHolder.data('index', index + 1);

                // Display the form in the page in an li, before the "Add a tag" link li
                $('#addArtist').before($newForm);
                artistSelect2($newForm.find('select'));
            }
        </script>
        
    {% endspaceless %}
{% endblock %}
