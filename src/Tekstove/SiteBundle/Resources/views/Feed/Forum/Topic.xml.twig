<?xml version="1.0" encoding="UTF-8" ?>
{% autoescape %}
    <rss version="2.0">
        <channel>
            <title>Нови мнения в tekstove.info</title>
            <link>{{ absolute_url(path('tekstove.site.forum.post.newest')) }}</link>
            <ttl>1800</ttl> 
                {% for post in posts %}
                <item>
                    <title>{{ post.topic.name }}</title>
                    <link>{{ absolute_url(path('tekstove.site.forum.topic.view', {id: post.topic.id})) }}</link>
                    <description>
                        от {{ post.user.username }}
                        {{ post.text }}
                    </description>
                </item>
            {% endfor %}
        </channel>
    </rss>
{% endautoescape %}
