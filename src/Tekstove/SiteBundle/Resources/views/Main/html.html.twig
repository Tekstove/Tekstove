<!DOCTYPE html>
<html lang="bg">
    <head>
        {% block head %}
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="author" content="tekstove.info">
        <meta name="revisit-after" content="1 days">
        <meta name="robots" content="index, follow">

        <link rel="stylesheet" href="{{ asset('bundles/site/css/style.css') }}?v=6" type="text/css">
        <link rel="stylesheet" href="//ajax.googleapis.com/ajax/libs/jqueryui/1.11.3/themes/smoothness/jquery-ui.css" />
        <meta name="theme-color" content="#e9e9e9">

        <script src="//ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
        <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
        <script src="//www.google.com/recaptcha/api.js" async defer></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js"></script>

        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <!-- Select2 -->
        <link href="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" />
        <script src="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>

        <script src="{{ asset('bundles/site/js/functions.js') }}?v=6"></script>

        <title>
            {% block title %}
                Текстове.инфо
            {% endblock %}
        </title>

        <link rel="shortcut icon" href="{{ asset('bundles/site/images/favicon.ico') }}">
        {% endblock %}
    </head>
    <body>
        {% block htmlBody %}
        {% endblock %}

        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

            ga('create', 'UA-4588309-1', 'auto');
            ga('send', 'pageview', {
                dimension1: {% if (is_granted('IS_AUTHENTICATED_FULLY')) %} 'logged' {% else %} 'anon.' {% endif %},
                dimension2: {% if ads is not defined %} 'n/a' {% else %} {{ ads|e('js') }} {% endif %}
            });
        </script>

